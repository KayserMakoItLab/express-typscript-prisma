generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Fruit {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  Shop Shop[]
}

model Shop{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  shopName String
  active Boolean
  fruit Fruit @relation(fields: [fruitId], references: [id])
  fruitId Int
}

